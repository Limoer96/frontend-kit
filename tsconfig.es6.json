{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "ES6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "outDir": "es",
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
